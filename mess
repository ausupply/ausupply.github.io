	<script>
		// Use JavaScript to change the text color every 500 milliseconds
		setInterval(function() {
			var textElements = document.getElementsByClassName('text');
			for (var i = 0; i < textElements.length; i++) {
				textElements[i].style.color = '#' + Math.floor(Math.random() * 16777215).toString(16);
			}
		}, 500);
	</script>
